{
  "name": "vite-lit-with-tailwind",
  "version": "2.1.0",
  "description": "withTailwind decorator for lit in vite",
  "main": "out/withTailwind.js",
  "module": "out/withTailwind.js",
  "type": "module",
  "scripts": {
    "dev": "vite --config vite.config.js src/test/",
    "build": "wireit",
    "build:demo": "vite build src/test --outDir ../../docs --base ./",
    "prepare": "husky install"
  },
  "wireit": {
    "build": {
      "command": "tsc --pretty",
      "clean": "if-file-deleted",
      "files": [
        "src",
        "tsconfig.json"
      ],
      "output": [
        "out"
      ]
    }
  },
  "license": "MIT",
  "keywords": [
    "lit",
    "vite",
    "tailwind"
  ],
  "author": "Valentin Degenne <vdegenne@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/vdegenne/vite-lit-with-tailwind.git"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "lit": "^2.7.4",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "vite": "^4.3.6",
    "wireit": "^0.9.5"
  },
  "files": [
    "/out",
    "!/out/test",
    "/tailwind.css",
    "LICENSE"
  ],
  "lint-staged": {
    "**/*.{cjs,html,js,json,md,ts}": "prettier --write"
  }
}
